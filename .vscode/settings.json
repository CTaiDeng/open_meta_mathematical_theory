{
  "python.defaultInterpreterPath": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
  "python.terminal.activateEnvironment": true,
  "terminal.integrated.profiles.windows": {
    "PowerShell (Workspace Venv)": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": [
        "-NoExit",
        "-NoLogo",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "& { if (Test-Path \"${workspaceFolder}\\.venv\\Scripts\\Activate.ps1\") { & \"${workspaceFolder}\\.venv\\Scripts\\Activate.ps1\" } }"
      ]
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell (Workspace Venv)"
}

